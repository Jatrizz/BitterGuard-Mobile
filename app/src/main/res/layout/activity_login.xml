<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="48dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to your account"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Phone/Email Field -->
        <EditText
            android:id="@+id/inputPhoneOrEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Phone number or Email"
            android:inputType="textEmailAddress|phone"
            android:background="@drawable/rounded_input_outline"
            android:paddingHorizontal="16dp"
            android:textColor="#222"
            android:textColorHint="#888"
            android:layout_marginBottom="16dp"
            android:elevation="1dp" />

        <!-- Password Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Password"
            app:endIconMode="password_toggle"
            app:endIconDrawable="@android:drawable/ic_menu_view"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#388E3C"
            app:hintTextColor="#888"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textPassword"
                android:textColor="#222"
                android:textColorHint="#888"
                android:paddingHorizontal="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot Password and Remember Me Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/checkboxRememberMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:textColor="#388E3C"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btnForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#388E3C"
                android:textStyle="bold"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#388E3C"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        

        <!-- Sign up link -->
        <TextView
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign up"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:textStyle="bold"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Continue offline link -->
        <TextView
            android:id="@+id/btnContinueOfflineLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue offline"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />
    </LinearLayout>

</ScrollView> 