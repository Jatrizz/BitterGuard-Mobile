<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_green"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="App Configuration"
        app:navigationIcon="@drawable/ic_back" />

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Configuration Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green"
        android:gravity="center" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="Modify app settings for testing and debugging. Changes are saved automatically."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center" />

    <!-- Configuration List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/configRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_dialog_bg"
        android:padding="8dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnResetConfig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Reset to Defaults"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/error_red" />

        <Button
            android:id="@+id/btnSaveConfig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Save Changes"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary_green" />

    </LinearLayout>

</LinearLayout>
