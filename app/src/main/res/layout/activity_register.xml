<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="48dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your new account"
            android:textSize="16sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Full Name Field -->
        <EditText
            android:id="@+id/inputFullName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_input_outline"
            android:paddingHorizontal="16dp"
            android:textColor="#222"
            android:textColorHint="#888"
            android:layout_marginBottom="16dp"
            android:elevation="1dp" />

        <!-- Phone Field (required) -->
        <EditText
            android:id="@+id/inputPhone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Phone Number (required)"
            android:inputType="phone"
            android:background="@drawable/rounded_input_outline"
            android:paddingHorizontal="16dp"
            android:textColor="#222"
            android:textColorHint="#888"
            android:layout_marginBottom="16dp"
            android:elevation="1dp" />

        <!-- Email Field (optional) -->
        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Email (optional)"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_input_outline"
            android:paddingHorizontal="16dp"
            android:textColor="#222"
            android:textColorHint="#888"
            android:layout_marginBottom="16dp"
            android:elevation="1dp" />

        <!-- Password Field (required) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Password (required)"
            app:endIconMode="password_toggle"
            app:endIconDrawable="@android:drawable/ic_menu_view"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#388E3C"
            app:hintTextColor="#888"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textPassword"
                android:textColor="#222"
                android:textColorHint="#888"
                android:paddingHorizontal="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Error Message for Duplicate Phone -->
        <TextView
            android:id="@+id/textPhoneError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This phone number is already used"
            android:textColor="#FF5252"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#388E3C"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <!-- Already have an account? Sign in link -->
        <TextView
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign in"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:textStyle="bold"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Continue offline link -->
        <TextView
            android:id="@+id/btnContinueOfflineRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue offline"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />
    </LinearLayout>

</ScrollView> 